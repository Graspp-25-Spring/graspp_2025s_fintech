import random

# 히라가나-로마자 대응 딕셔너리
hiragana_dict = [
    ("あ", "a"), ("い", "i"), ("う", "u"), ("え", "e"), ("お", "o"),
    ("か", "ka"), ("き", "ki"), ("く", "ku"), ("け", "ke"), ("こ", "ko"),
    ("さ", "sa"), ("し", "shi"), ("す", "su"), ("せ", "se"), ("そ", "so"),
    ("た", "ta"), ("ち", "chi"), ("つ", "tsu"), ("て", "te"), ("と", "to"),
    ("な", "na"), ("に", "ni"), ("ぬ", "nu"), ("ね", "ne"), ("の", "no"),
    ("は", "ha"), ("ひ", "hi"), ("ふ", "fu"), ("へ", "he"), ("ほ", "ho"),
    ("ま", "ma"), ("み", "mi"), ("む", "mu"), ("め", "me"), ("も", "mo"),
    ("や", "ya"), ("ゆ", "yu"), ("よ", "yo"),
    ("ら", "ra"), ("り", "ri"), ("る", "ru"), ("れ", "re"), ("ろ", "ro"),
    ("わ", "wa"), ("を", "wo"), ("ん", "n")
]

def writing_mode():
    """쓰기 모드: 50개의 랜덤한 로마자 세트를 순차적으로 보여주고 엔터를 치면 다음으로 넘어감"""
    print("쓰기 모드: 로마자 발음을 랜덤하게 50개 보여줍니다.\n")
    random.shuffle(hiragana_dict)
    
    for _, romaji in hiragana_dict:
        input(f"{romaji} (엔터를 누르세요)")
    print("쓰기 모드가 완료되었습니다!\n")

def reading_mode():
    """읽기 모드: 히라가나를 보고 로마자를 입력해야 함"""
    print("읽기 모드: 히라가나를 보고 로마자로 입력하세요.\n")
    random.shuffle(hiragana_dict)  # 문제 순서를 랜덤하게 섞기
    
    for hiragana, romaji in hiragana_dict:
        answer = input(f"{hiragana} -> ").strip().lower()
        if answer == romaji:
            print("정답입니다! 🎉\n")
        else:
            print(f"틀렸습니다. 정답은 '{romaji}'입니다. 😢\n")
    print("읽기 모드가 완료되었습니다!\n")

def main():
    print("히라가나 맞추기 게임을 시작합니다!")
    while True:
        mode = input("모드를 선택하세요 ('쓰기' 또는 '읽기', 종료하려면 '종료'): ").strip()
        
        if mode == "쓰기":
            writing_mode()
        elif mode == "읽기":
            reading_mode()
        elif mode == "종료":
            print("게임을 종료합니다. 👋")
            break
        else:
            print("올바른 입력이 아닙니다. 다시 입력하세요.\n")

if __name__ == "__main__":
    main()